{% extends 'default.html.twig' %}

{% block body %}
    <article class="blog-post mt-5 text-center col-xl-10 m-auto">
        <h2 class="blog-post-title mb-1">{{ post.title }}</h2>
        <p class="blog-post-meta">Par {{ post.author }}  </p>

        {% if (post.updatedAt) %}
            <span class="text-muted">Updated {{ post.updated_fr }}</span>
            {% else %}
            <span class="text-muted"> Added {{ post.created_fr }}</span>
        {% endif %}

        <p>
            {{ post.content }}
        </p>
    </article>
{% endblock %}