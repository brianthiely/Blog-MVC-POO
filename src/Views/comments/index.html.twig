<section>
    <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center">
            <div class="col-xl-10">
                <div class="card">
                    <div class="card-body p-4">
                        <h4 class="text-center mb-4 pb-2">Commentary</h4>
                        <button class="btn btn-primary mb-4" type="button" data-bs-toggle="collapse"
                                data-bs-target="#buttonCommentDropdown" aria-controls="buttonCommentDropdown"
                                aria-expanded="false" aria-label="Toggle navigation">
                            Add a comment
                        </button>
                        <div class=" collapse navbar-collapse mb-4" id="buttonCommentDropdown">
                            {% include('comments/add.html.twig') %}
                        </div>
                        {% for comment in comments %}
                            {% include('comments/read.html.twig') %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
