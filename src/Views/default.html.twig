{% set debug = true %}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/a6b7960de6.js" crossorigin="anonymous"></script>
    <link rel="icon" href="/public/img/favicon/icons8-Ã©toile-3d-fluency-16.png" />

    <title>{% block title %}Developer PHP | Paris {% endblock %}</title>

    {% block stylessheets %}{% endblock %}

</head>
<body>

    {% block header %}
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-3">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class=" collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav mr-auto ">
                            <li class="nav-item">
                                <a class="nav-link mx-2 fw-bold" aria-current="page" href="/">HOME</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mx-2 fw-bold" href="/post">BLOG</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mx-2 fw-bold" href="/#CV">MY EXPERIENCES</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mx-2 fw-bold" href="/#contact">CONTACT</a>
                            </li>

                            {% if session.get('user') %}
                                <li class="nav-item">
                                    <a class="nav-link mx-2 fw-bold text-warning" href="/user/logout">Logout</a>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link mx-2 fw-bold text-warning" href="/user/login">Login</a>
                                </li>
                            {% endif %}

                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    {% endblock %}
    {% block flash %}
        {% if flash.has('error') %}
            <div class="alert alert-danger w-50 m-auto text-center" role="alert">
                {{ flash.get('error') }}
            </div>
        {% endif %}

        {% if flash.has('success') %}
            <div class="alert alert-success w-50 m-auto text-center" role="alert">
                {{ flash.get('success') }}
            </div>
        {% endif %}

        {% if flash.has('message') %}
            <div class="alert alert-warning w-50 m-auto text-center" role="alert">
                {{ flash.get('message') }}
            </div>
        {% endif %}
    {% endblock %}

    {% block body %}
    {% endblock %}

    {% block footer %}
        <footer class="text-center bg-dark footer mt-5 p-3">
            <div class="footer-above text-white">
                <div class="container">
                    <div class="row d-flex align-items-center">
                        <div class="footer-col col-md-4">
                            <h3>Location</h3>
                            <p>Paris
                                <br>France
                            </p>
                        </div>
                        <div class="footer-col col-md-4">
                            <h3>Find me on</h3>
                            <ul class="list-inline d-flex justify-content-around">
                                <li>
                                    <a href="https://github.com/brianthiely" target="_blank" rel="noopener noreferrer" class="btn-social btn-outline text-white"><i class="fa fa-fw fa-github"></i></a>
                                </li>
                                <li>
                                    <a href="https://twitter.com/BrianThiely" target="_blank" rel="noopener noreferrer" class="btn-social btn-outline text-white"><i class="fa fa-fw fa-twitter"></i></a>
                                </li>
                                <li>
                                    <a href="https://www.linkedin.com/in/brian-thiely/" target="_blank" rel="noopener noreferrer" class="btn-social btn-outline text-white"><i class="fa fa-fw fa-linkedin"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    {% endblock %}
</body>
</html>
